        update_test_cfile(name)
        update_test_hfile(name)
        
    except FileNotFoundError:
        print(dummy_tx_red + "Suite" + dummy_tx_bold + " " + suite_name + " " +
              dummy_tx_reset + dummy_tx_red + "doesn't exist" + dummy_tx_reset)

